<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.teaspoon.teamall.domain.member.mapper.MemberMapper">

    <!--회원가입-->
    <insert id="join" parameterType="com.teaspoon.teamall.domain.member.dto.MemberDTO" useGeneratedKeys="true" keyProperty="member_no">
        INSERT INTO member(email, password, nickname, gender, birth, phone, create_date, update_date)
        VALUES (#{email}, #{password}, #{nickname}, #{gender}, #{birth}, #{phone}, now(), now())
    </insert>

    <!--회원수정-->
    <update id="updateMember" parameterType="com.teaspoon.teamall.domain.member.dto.MemberDTO">
        UPDATE member SET
        password = #{password},
        nickname = #{nickname},
        gender = #{gender},
        birth = #{birth},
        phone = #{phone},
        update_date = now()
        WHERE email = #{email}
    </update>

    <!--회원삭제-->
    <delete id="deleteMember" parameterType="com.teaspoon.teamall.domain.member.dto.MemberDTO">
        DELETE FROM member
        WHERE email = #{email}
        AND password = #{password}
    </delete>

    <!--로그인-->
    <select id="login" parameterType="com.teaspoon.teamall.domain.member.dto.LoginDTO" resultType="com.teaspoon.teamall.domain.member.dto.LoginResponseDTO">
        SELECT member_no, email, nickname
        FROM member
        WHERE email = #{email}
          AND password = #{password}
    </select>

